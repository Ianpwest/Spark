@model Spark.Models.SparkArgumentModel

<div class="sparkArgumentPreviewDisagree">
    <div class="sparkArgumentInsideContainerDisagree">
        <div class="sparkArgumentPreviewTitleLineDisagree">
            <div class="sparkDisagreeSpark">
                <img src="~/Images/Icons/SparkIcon1.png" alt="Spark" height="20" width="20" />
            </div>
            <div class="sparkUsernameDisagree">
                @Model.strUserName
            </div>
            <div class="sparkInfluenceScoreDisagree" id="sparkInfluenceScore@(Model.id)">
                Influence: @Model.nInfluenceScore.ToString()
            </div>
            <div class="sparkDownvoteDisagree" id="sparkDownvote@(Model.id)">
                -# @Model.nDownVote.ToString()
            </div>
            <div class="sparkUpvoteDisagree" id="sparkUpvote@(Model.id)">
                +# @Model.nUpVote.ToString()
            </div>
            <div class="sparkCommentsCountDisagree" id="sparkCommentsCount@(Model.id)">
                Comment # @Model.nCommentCount.ToString()
            </div>
        </div>
        <div class="sparkConclusion">
                @Html.Raw(Model.strConclusion)
        </div>
        <div class="sparkArgumentFooter">
            <div class="sparkArgumentFlagDisagree">
                <a onclick="" href="#">flag</a>
            </div>
            <div class="sparkExpandDisagree">
               @Html.ActionLink("Expand", "GetExpandedArgumentView", "Spark", new { id = @Model.id }, null)
            </div>
            <div class="sparkAddComment">
            </div>
        </div>

        <div class="hidden" id="HiddenInfluenceScoreDisagree@(Model.id)">@Model.nInfluenceScore.ToString()</div>
        <div class="hidden" id="HiddenDownvote@(Model.id)">@Model.nDownVote.ToString()</div>
        <div class="hidden" id="HiddenUpvote@(Model.id)">@Model.nUpVote.ToString()</div>
        <div class="hidden" id="HiddenCommentsCount@(Model.id)">@Model.nCommentCount.ToString()</div>
        
    </div>
    <div class="sparkArgumentUpDownVoteDisagree">
        <div class="sparkUpVote" onclick="CastArgumentVote(@Model.id, true)"></div>
        <p style="word-wrap:break-word">@Model.nArgumentScore.ToString()</p>
        <div class="sparkDownVote" onclick="CastArgumentVote(@Model.id, false)"></div>
    </div>
</div>